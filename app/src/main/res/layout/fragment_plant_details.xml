<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlantDetailsFragment">

    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Plant Name"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_plant_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/label_type"
        android:text="Flower"
        app:layout_constraintTop_toBottomOf="@id/tv_plant_name" />

    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Type:"
        app:layout_constraintTop_toBottomOf="@id/tv_plant_name" />


    <TextView
        android:id="@+id/tv_watering_frequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/label_watering_frequency"
        android:text="2 days"
        app:layout_constraintTop_toBottomOf="@id/label_type" />

    <TextView
        android:id="@+id/label_watering_frequency"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Watering Frequency:"
        app:layout_constraintTop_toBottomOf="@id/label_type" />

    <TextView
        android:id="@+id/tv_planting_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/label_watering_frequency"
        android:text="2023-01-18"
        app:layout_constraintTop_toBottomOf="@id/label_watering_frequency" />

    <TextView
        android:id="@+id/label_planting_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Watering Frequency:"
        app:layout_constraintTop_toBottomOf="@id/label_watering_frequency" />




</androidx.constraintlayout.widget.ConstraintLayout>